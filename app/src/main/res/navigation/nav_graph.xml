<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.arcanedex_app.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <!-- Detail Fragment -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.arcanedex_app.DetailFragment"
        android:label="DetailFragment">
        <!-- Ação para voltar ao HomeFragment -->
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Outros Fragments -->
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.arcanedex_app.FavouritesFragment"
        android:label="FavouritesFragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.arcanedex_app.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>
